<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
    <hibernate-mapping>
    	<class name="hibernate.User" table="ZX_USER">
			<id name="id" type="java.lang.Integer" column="ID">
				<generator class="identity"/>
			</id>
			<property column="username" name="username" type="java.lang.String"/>
			<property column="password" name="password" type="java.lang.String"/>
			<property column="enable" name="statue" type="java.lang.Integer"/>
		</class>  
    </hibernate-mapping>